<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="kr.or.phonejob.pc.Dao.LoginDao">
	
	<!-- 로그인 정보 추출1 -->
	<select id="loginInfo1" parameterType="String" resultType="kr.or.phonejob.pc.Dto.LoginDto">
		select * from pj_members where userid=#{userid}
	</select>
	
	<!-- 로그인 정보 추출2 -->
	<select id="loginInfo2" parameterType="String" resultType="kr.or.phonejob.pc.Dto.LoginDto">
		select * from pj_mem_d where credential_id=#{credential_id}
	</select>
	
	<!-- 로그인 정보 추출2 -->
	<select id="loginInfo3" parameterType="String" resultType="kr.or.phonejob.pc.Dto.LoginDto">
		select * from pj_com_key where credential_id=#{credential_id}
	</select>

	<!-- 로그인된 경우 해당 세션id와 유효시간을 사용자 테이블에 세팅한다. -->
	<update id="keepLogin">
		update PJ_MEMBERS set sessionKey = #{sessionId}, sessionLimit = #{next} where userId=#{userId}
	</update>

	<!-- 유효기간이 남아 있으면서 해당 sessionId를 가지는 사용자 정보를 꺼내오는 부분 -->
	<select id="checkUserWithSessionKey" resultType="kr.or.phonejob.pc.Dto.LoginDto">
		select * from PJ_MEMBERS where sessionKey = #{sessionId} and sessionLimit &gt; now()
	</select>

</mapper>