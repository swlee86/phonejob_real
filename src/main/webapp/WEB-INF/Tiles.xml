<?xml version="1.0" encoding="utf-8"?>
  <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
	<definition name="home.*" template="/WEB-INF/views/inc/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
		<put-attribute name="content" value="/WEB-INF/views/{1}.jsp" />
	</definition>

	<definition name="mobile.home.*" template="/WEB-INF/views/s_inc/s_layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/s_inc/s_header.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/views/s_inc/s_sidebar.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/s_inc/s_footer.jsp" />
		<put-attribute name="content" value="/WEB-INF/views/s_{1}.jsp" />
	</definition>

	<definition name="mobile.*.*" template="/WEB-INF/views/{1}/s_inc/s_layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/s_inc/s_header.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/views/s_inc/s_sidebar.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/s_inc/s_footer.jsp" />
		<put-attribute name="content" value="/WEB-INF/views/s_{1}/s_{2}.jsp" />
	</definition>

	<definition name="*.*" template="/WEB-INF/views/{1}/inc/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>

	<definition name="errors.*" template="/WEB-INF/views/errors/inc/layout.jsp">
		<put-attribute name="content" value="/WEB-INF/views/errors/{1}.jsp" />
	</definition>



</tiles-definitions>   